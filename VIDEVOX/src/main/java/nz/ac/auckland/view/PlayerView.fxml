<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.media.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.view.PlayerViewController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
              <items>
                  <HBox>
                     <children>
                        <Region minWidth="10.0" style="-fx-background-color: black;" HBox.hgrow="NEVER" />
                        <VBox minWidth="500.0" HBox.hgrow="ALWAYS">
                           <children>
                              <Region style="-fx-background-color: black;" VBox.vgrow="ALWAYS" />
                              <HBox style="-fx-background-color: black;">
                                 <children>
                                    <MediaView fx:id="_mainPlayerView" fitHeight="200.0" fitWidth="500.0" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <Region style="-fx-background-color: black;" VBox.vgrow="ALWAYS" />
                           </children>
                        </VBox>
                        <Region minWidth="10.0" style="-fx-background-color: black;" HBox.hgrow="NEVER" />
                     </children>
                  </HBox>
                  <VBox>
                     <children>
                        <HBox>
                           <children>
                              <Region HBox.hgrow="ALWAYS" />
                              <Label text="Audio Files">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                              <Region layoutX="10.0" layoutY="10.0" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                           <content>
                              <VBox fx:id="_scrollBox" />
                           </content>
                        </ScrollPane>
                        <HBox>
                           <children>
                              <Region HBox.hgrow="ALWAYS" />
                              <Button minWidth="100.0" mnemonicParsing="false" text="Add Audio File" HBox.hgrow="ALWAYS" />
                              <Region HBox.hgrow="ALWAYS" />
                              <Button layoutX="10.0" layoutY="10.0" minWidth="100.0" mnemonicParsing="false" text="Text to Speech" HBox.hgrow="ALWAYS" />
                              <Region HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
              </items>
            </SplitPane>
            <HBox spacing="5.0" VBox.vgrow="NEVER">
               <children>
                  <Button fx:id="_skipBackButton" mnemonicParsing="false" text="Skip Back" />
                  <Button fx:id="_playPauseButton" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Play/Pause" />
                  <Button fx:id="_skipForwardButton" layoutX="62.0" layoutY="10.0" mnemonicParsing="false" text="Skip Forward" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
